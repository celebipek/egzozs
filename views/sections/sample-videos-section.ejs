    </div>
</section>

<script>
    function toggleVideoPlayback(element) {
        const video = element.querySelector('video');
        const icon = element.querySelector('.play-icon');
        
        if (video.paused) {
            video.play();
            icon.style.display = 'none';
        } else {
            video.pause();
            icon.style.display = 'flex';
        }
    }
</script>